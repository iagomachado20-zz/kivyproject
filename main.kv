        orientation: 'horizontal'       
        Button:
            text: "Listar"
            pos_hint: {"center_x": .5, "center_y": .70}
            size_hint: .5, .1
            font_size: 12
            background_color: Color("000000")
            on_press: root.lista('alunos')
