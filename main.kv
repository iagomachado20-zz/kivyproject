#:kivy 1.9.1
#:import Color kivy.utils.get_color_from_hex

<MainLayout@FloatLayout>:
    size_hint: 1, 1
    canvas.before:
        Color:
            rgba: Color("#e9e9e9")
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "Bem Vindo!"
        font_size: 40
        color: Color("#000000")
        font_name: "Roboto"
        pos_hint: {"center_x":.5, "center_y": .90}
